#!/bin/bash

#Parameters:

ALIGNED=$1
UNMAPPED=$2
OUTPUT=$3
REFERENCE_SEQUENCE=$4
EXPECTED_ORIENTATIONS=$5
MAX_GAPS=$6
SORT_ORDER="coordinate"
CREATE_INDEX=true
ALIGNER_PROPER_PAIR_FLAGS=false

java -Xmx4g -jar $PICARD MergeBamAlignment \
		ALIGNED=$ALIGNED \
		UNMAPPED=$UNMAPPED \
		OUTPUT=$OUTPUT \
		REFERENCE_SEQUENCE=$REFERENCE_SEQUENCE \
		EXPECTED_ORIENTATIONS=$EXPECTED_ORIENTATIONS \
		MAX_GAPS=$MAX_GAPS \
		SORT_ORDER=$SORT_ORDER \
		CREATE_INDEX=$CREATE_INDEX \
		ALIGNER_PROPER_PAIR_FLAGS=$ALIGNER_PROPER_PAIR_FLAGS \
		VALIDATION_STRINGENCY=SILENT
